{
  "name": "banny",
  "version": "0.0.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "engines": {
    "node": ">= 12.15 <15"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/bluebird": "^3.5.33",
    "@types/dotenv-load": "^2.0.0",
    "@types/jest": "~26.0.15",
    "@types/node": "^14.14.10",
    "@types/validator": "^13.1.1",
    "@typescript-eslint/eslint-plugin": "~4.7.0",
    "@typescript-eslint/parser": "~4.7.0",
    "eslint": "~7.13.0",
    "eslint-config-prettier": "~6.15.0",
    "eslint-plugin-jest": "~24.1.3",
    "husky": "^4.3.4",
    "jest": "~26.6.3",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "~2.1.2",
    "rimraf": "~3.0.2",
    "ts-jest": "~26.4.4",
    "ts-node": "^9.1.0",
    "tsutils": "~3.17.0",
    "typescript": "~4.0.5"
  },
  "scripts": {
    "start": "node build/main.js",
    "start:watch": "nodemon src/main.ts",
    "clean": "rimraf coverage build tmp",
    "build": "tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:migrate:redo": "sequelize-cli db:migrate:undo && sequelize-cli db:migrate",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "author": "jfkz <jfkz@users.noreply.github.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@edjopato/telegraf-i18n": "^0.1.1",
    "dotenv-load": "^2.0.0",
    "mariadb": "^2.5.2",
    "mysql2": "^2.2.5",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.22.3",
    "sequelize-cli": "^6.2.0",
    "sequelize-typescript": "^1.1.0",
    "sqlite3": "^5.0.0",
    "telegraf": "https://github.com/telegraf/telegraf.git",
    "telegraf-anycase-commands": "^1.1.0",
    "telegraf-ratelimit": "^2.0.0",
    "telegraf-session-redis": "^5.1.0",
    "telegraf-update-logger": "^1.2.0",
    "tslib": "~2.0.3",
    "winston": "^3.3.3"
  },
  "volta": {
    "node": "14.15.0"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "node --require ts-node/register"
    },
    "watch": [
      "src/",
      "tsconfig.json"
    ],
    "ext": "js,json,ts,tsx"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint",
      "pre-push": "run-s build",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
